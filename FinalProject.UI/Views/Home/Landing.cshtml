﻿@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hospital Management - Landing Page</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
        }
        .hero {
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/hospital-bg.jpg') center/cover no-repeat;
            color: white;
            padding: 100px 0;
            text-align: center;
        }
        .hero h1 {
            font-size: 3rem;
            font-weight: bold;
        }
        .hero p {
            font-size: 1.25rem;
        }
        .services i {
            color: #007bff;
        }
        .team img {
            object-fit: cover;
            border-radius: 50%;
        }
        footer {
            background-color: #343a40;
            color: white;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Welcome to Our Hospital Management System</h1>
            <p>"Compassionate Care, Advanced Technology – Your Health, Our Priority."</p>
            <a href="/Account/Login" class="btn btn-primary btn-lg mt-3">Login</a>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services py-5 text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="/images/patient-care.jpg" alt="Patient Care" class="mb-3" width="100" height="100" />
                    <h4>Patient Care</h4>
                    <p>Track patient details, visits, and prescriptions effortlessly.</p>
                </div>
                <div class="col-md-4">
                    <img src="/images/room-management.jpg" alt="Room Management" class="mb-3" width="100" height="100" />
                    <h4>Room Management</h4>
                    <p>Assign, monitor, and manage room occupancy and types.</p>
                </div>
                <div class="col-md-4">
                    <img src="/images/doctor-scheduling.jpg" alt="Doctor Scheduling" class="mb-3" width="100" height="100" />
                    <h4>Doctor Scheduling</h4>
                    <p>View and update doctors' availability and appointments.</p>
                </div>
            </div>
        </div>
    </section>


    <!-- Team Section -->
    <section class="team py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Meet Our Experts</h2>
            <div class="row text-center">
                <div class="col-md-4">
                    <img src="/images/dr-felix.jpg" class="rounded-circle mb-3" alt="Dr. Felix" width="150" height="150">
                    <h5>Dr. Felix</h5>
                    <p>Chief Medical Officer</p>
                </div>
                <div class="col-md-4">
                    <img src="/images/jennifer.jpg" class="rounded-circle mb-3" alt="Jennifer" width="150" height="150">
                    <h5>Jennifer</h5>
                    <p>Office Manager</p>
                </div>
                <div class="col-md-4">
                    <img src="/images/ana.jpg" class="rounded-circle mb-3" alt="Ana" width="150" height="150">
                    <h5>Ana</h5>
                    <p>Medical Assistant</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Location Section -->
    <section class="location py-5">
        <div class="container text-center">
            <h2 class="mb-4">Visit Our Hospital</h2>
            <p>We are located at Shivaji Nagar, Pune, Maharashtra 411005</p>
            <div class="embed-responsive embed-responsive-16by9 mb-4">
                <iframe class="embed-responsive-item"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3783.085448693168!2d73.84725107499292!3d18.558567982544927!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bc2c07592d3a327%3A0x6df2de651e93b2f4!2sShivaji%20Nagar%2C%20Pune%2C%20Maharashtra%20411005!5e0!3m2!1sen!2sin!4v1717600000000"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </section>

    <!-- Creative Footer -->
    <footer class="py-4 text-center" style="background: linear-gradient(to right, #007bff, #0056b3); color: white;">
        <div class="container">
            <p>&copy; 2025 Hospital Management System. Built with ❤️ and care.</p>
            <p>Contact us: +91 98765 43210 | info@yourhospital.com</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>